{
  "name": "manifest-plus",
  "description": "Provides JSON schemas for FVTT module / system manifests & manifest+ extensions.",
  "version": "0.0.0",
  "author": "typhonrt",
  "private": true,
  "bugs": "https://github.com/typhonjs-fvtt/manifest-plus/issues",
  "dependencies": {},
  "devDependencies": {
    "ajv": "^7.0.0",
    "ajv-cli": "^4.0.0",
    "ajv-keywords": "^4.0.0",
    "chai": "^4.0.0",
    "eslint": "^7.0.0",
    "gitdown": "^3.0.0",
    "mocha": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/validators.js",
  "files": [
    "/dist",
    "/schema",
    "ManifestPlus.md"
  ],
  "homepage": "https://github.com/typhonjs-fvtt/manifest-plus",
  "keywords": [
    "json schema",
    "module.json",
    "system.json",
    "manifest+",
    "fvtt",
    "foundry vtt"
  ],
  "license": "MIT",
  "repository": "typhonjs-fvtt/manifest-plus",
  "scripts": {
    "compile-validators": "ajv compile --all-errors --inline-refs=false -s \"schema/*.json\" -r \"schema/shared/*.json\" -c ajv-keywords/dist/keywords/typeof -o > dist/validators.js && prettier --write \"./dist/validators.js\"",
    "create-specification": "gitdown ./.specification/ManifestPlus.md --output-file ./ManifestPlus.md",
    "test": "nyc mocha --forbid-only \"test/src/**/*.test.js\""
  }
}

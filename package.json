{
  "name": "@typhonjs-fvtt/validate-manifest",
  "description": "Provides validation functions / JSON schemas for FVTT module / system manifests & manifest+ extensions.",
  "version": "0.0.1",
  "author": "typhonrt",
  "private": true,
  "bugs": "https://github.com/typhonjs-fvtt/validate-manifest/issues",
  "dependencies": {},
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.0",
    "@typhonjs-node-utils/better-ajv-errors": "^0.0.1",
    "ajv": "^7.0.0",
    "ajv-cli": "^4.0.0",
    "ajv-errors": "^2.0.0",
    "chai": "^4.0.0",
    "codecov": "^3.0.0",
    "deepmerge": "^4.0.0",
    "eslint": "^7.0.0",
    "gitdown": "^3.0.0",
    "mocha": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "strip-json-comments": "^3.0.0",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/validators.js",
  "files": [
    "/dist",
    "/schema",
    "ManifestPlus.md"
  ],
  "homepage": "https://github.com/typhonjs-fvtt/validate-manifest",
  "keywords": [
    "json schema",
    "module.json",
    "system.json",
    "manifest+",
    "fvtt",
    "foundry vtt"
  ],
  "license": "MPL-2.0",
  "repository": "typhonjs-fvtt/validate-manifest",
  "scripts": {
    "compile": "node src/merge/merge.js && node src/compile/compileSchema.js && ajv compile --all-errors --strict-types=false -r \"src/schema/shared/**/*.json\" -s \"src/schema/validators/**/*.json\" -c ajv-errors -o dist/validator-functions.js && prettier --write \"./dist/validator-functions.js\"",
    "create-specification": "gitdown ./.specification/ManifestPlus.md --output-file ./ManifestPlus.md",
    "test": "npm run compile && nyc --reporter=lcov --reporter=text-summary mocha -colors \"test/src/**/*.test.js\""
  }
}

{
  "name": "manifest-plus",
  "description": "Provides JSON schemas for FVTT module / system manifests & manifest+ extensions.",
  "version": "0.0.0",
  "author": "typhonrt",
  "private": true,
  "bugs": "https://github.com/typhonjs-fvtt/manifest-plus/issues",
  "dependencies": {},
  "devDependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.0",
    "ajv": "^7.0.0",
    "ajv-cli": "^4.0.0",
    "ajv-errors": "^2.0.0",
    "ajv-keywords": "^4.0.0",
    "chai": "^4.0.0",
    "eslint": "^7.0.0",
    "gitdown": "^3.0.0",
    "mocha": "^8.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.0.0",
    "strip-json-comments": "^3.0.0",
    "typhonjs-config-eslint": "^0.6.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "dist/validators.js",
  "files": [
    "/dist",
    "/schema",
    "ManifestPlus.md"
  ],
  "homepage": "https://github.com/typhonjs-fvtt/manifest-plus",
  "keywords": [
    "json schema",
    "module.json",
    "system.json",
    "manifest+",
    "fvtt",
    "foundry vtt"
  ],
  "license": "MIT",
  "repository": "typhonjs-fvtt/manifest-plus",
  "scripts": {
    "compile-all": "npm run compile-validators && npm run compile-schema",
    "compile-validators": "ajv compile --all-errors --inline-refs=false -r \"src/schema/shared/**/*.json\" -s \"src/schema/validators/**/*.json\" -c ajv-errors -c ajv-keywords/dist/keywords/typeof -o > dist/validators.js && prettier --write \"./dist/validators.js\"",
    "compile-schema": "node src/compile/compileSchema.js",
    "create-specification": "gitdown ./.specification/ManifestPlus.md --output-file ./ManifestPlus.md",
    "test": "nyc --reporter=lcov --reporter=text-summary mocha \"test/src/**/*.test.js\""
  }
}

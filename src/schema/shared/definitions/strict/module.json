{
  "$id": "shared/definitions/strict/module.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "manifest": {
      "$id": "#/definitions/manifest",
      "title": "A string value",
      "default": "",
      "examples": [
        "https://someaddress.com/module.json"
      ],
      "type": "string",
      "pattern": "^(?:(?:(?:https?|ftp):)?//)(?:\\S+(?::\\S*)?@)?(?:(?!(?:10|127)(?:\\.\\d{1,3}){3})(?!(?:169\\.254|192\\.168)(?:\\.\\d{1,3}){2})(?!172\\.(?:1[6-9]|2\\d|3[0-1])(?:\\.\\d{1,3}){2})(?:[1-9]\\d?|1\\d\\d|2[01]\\d|22[0-3])(?:\\.(?:1?\\d{1,2}|2[0-4]\\d|25[0-5])){2}(?:\\.(?:[1-9]\\d?|1\\d\\d|2[0-4]\\d|25[0-4]))|(?:(?:[a-z0-9\\u00a1-\\uffff][a-z0-9\\u00a1-\\uffff_-]{0,62})?[a-z0-9\\u00a1-\\uffff]\\.)+(?:[a-z\\u00a1-\\uffff]{2,}\\.?))(?::\\d{2,5})?(?:[/?#]\\S*)?/module.json$",
      "errorMessage": {
        "pattern": "'manifest' should be a string and / or appears to be a malformed url"
      }
    },
    "system": {
      "title": "A string value",
      "default": "",
      "examples": [
        "dnd5e"
      ],
      "type": "string"
    },
    "systems": {
      "title": "An array of items",
      "items": {
        "title": "A string value",
        "default": "",
        "examples": [
          "dnd5e"
        ],
        "type": "string"
      },
      "type": "array"
    }
  }
}
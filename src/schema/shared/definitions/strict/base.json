{
  "$id": "shared/definitions/strict/base.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "version": {
      "title": "A semantic version string value",
      "default": "",
      "examples": [
        "1.0.0"
      ],
      "$id": "#/definitions/version",
      "allOf": [{ "$ref": "fragments.json#/definitions/semver"}],
      "errorMessage": "'version' should be a string that uses semantic versioning"
    },
    "minimumCoreVersion": {
      "title": "A semantic version string value",
      "default": "",
      "examples": [
        "1.0.0"
      ],
      "$id": "#/definitions/minimumCoreVersion",
      "allOf": [{ "$ref": "fragments.json#/definitions/semver"}],
      "errorMessage": "'minimumCoreVersion' should be a string that uses semantic versioning"
    },
    "compatibleCoreVersion": {
      "title": "A semantic version string value",
      "default": "",
      "examples": [
        "1.0.0"
      ],
      "$id": "#/definitions/compatibleCoreVersion",
      "allOf": [{ "$ref": "fragments.json#/definitions/semver"}],
      "errorMessage": "'compatibleCoreVersion' should be a string that uses semantic versioning"
    },
    "url": {
      "title": "A string value",
      "default": "",
      "examples": [
        "https://someaddress.com/"
      ],
      "$id": "#/definitions/url",
      "allOf": [{ "$ref": "fragments.json#/definitions/url-pattern"}],
      "errorMessage": {
        "pattern": "'url' should be a string and / or appears to be a malformed url"
      }
    },
    "download": {
      "$id": "#/definitions/download",
      "title": "A string value",
      "default": "",
      "examples": [
        "https://someaddress.com/module.zip"
      ],
      "allOf": [{ "$ref": "fragments.json#/definitions/url-pattern"}],
      "errorMessage": {
        "pattern": "'download' should be a string and / or appears to be a malformed url"
      }
    },
    "esmodules": {
      "title": "An array of items",
      "items": {
        "$id": "#/definitions/esmodules/items",
        "title": "A string value",
        "default": "",
        "examples": [
          "index.js"
        ],
        "allOf": [{ "$ref": "fragments.json#/definitions/file-js"}]
      },
      "$id": "#/definitions/esmodules",
      "type": "array"
    },
    "scripts": {
      "title": "An array of items",
      "items": {
        "$id": "#/properties/scripts/items",
        "title": "A string value",
        "default": "",
        "examples": [
          "ascript.js"
        ],
        "allOf": [{ "$ref": "fragments.json#/definitions/file-js" }]
      },
      "$id": "#/definitions/scripts",
      "type": "array"
    },
    "styles": {
      "title": "An array of items",
      "items": {
        "$id": "#/definitions/styles/items",
        "title": "A string value",
        "default": "",
        "examples": [
          "styles.css"
        ],
        "allOf": [{ "$ref": "fragments.json#/definitions/file-css" }]
      },
      "$id": "#/definitions/styles",
      "type": "array"
    },
    "manifest": {
      "$id": "#/definitions/manifest",
      "title": "A string value",
      "default": "",
      "examples": [
        "https://someaddress.com/module.json"
      ],
      "allOf": [{ "$ref": "fragments.json#/definitions/url-pattern"}],
      "errorMessage": {
        "pattern": "'manifest' should be a string and / or appears to be a malformed url"
      }
    },
    "bugs": {
      "$id": "#/definitions/bugs",
      "title": "A string value",
      "default": "",
      "examples": [
        "https://github.com/some-user/a-module/issues"
      ],
      "allOf": [{ "$ref": "fragments.json#/definitions/url-pattern"}],
      "errorMessage": {
        "pattern": "'bugs' should be a string and / or appears to be a malformed url"
      }
    },
    "changelog": {
      "$id": "#/definitions/changelog",
      "title": "A string value",
      "default": "",
      "examples": [
        "https://github.com/some-user/a-module/releases"
      ],
      "allOf": [{ "$ref": "fragments.json#/definitions/url-pattern"}],
      "errorMessage": {
        "pattern": "'changelog' should be a string and / or appears to be a malformed url"
      }
    }
  }
}

{
  "$id": "shared/definitions/strict/system.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "manifest": {
      // Replace with pattern-url-system-json include
      "$$include": { "target": "pattern-url-system-json", "data": { "name": "manifest" } }
    },
    "packs": {
      "title": "An array of items",
      "items": {
        "title": "An object value",
        "required": [
          "name",
          "label",
          "path",
          "entity"
        ],
        "properties": {
          "path": {
            // Replace with pattern-file-db include
            "$$include": { "target": "pattern-file-db", "data": { "name": "path" } }
          },
          "entity": {
            "enum": [
              "Actor", "ChatMessage", "Combat", "Item", "Folder", "JournalEntry", "Macro", "Playlist", "RollTable",
               "Scene", "User"
            ]
          }
        }
      }
    }
  }
}

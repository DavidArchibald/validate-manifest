{
  "$id": "shared/definitions/strict/base-manifest+.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "conflicts": {
      "items": {
        "properties": {
          "name": {
            // Replace with pattern-package-name-loose include
            "$$include": { "target": "pattern-package-name-loose", "data": { "name": "conflicts" } }
          }
        }
      }
    },
    "deprecated": {
      "properties": {
        "alternatives": {
          "items": {
            "properties": {
              "name": {
                // Replace with pattern-package-name-loose include
                "$$include": { "target": "pattern-package-name-loose", "data": { "name": "name" } }
              },
              "manifest": {
                // Replace with pattern-url-manifest include
                "$$include": { "target": "pattern-url-manifest", "data": { "name": "manifest" } }
              }
            }
          }
        },
        "coreVersion": {
          // Replace with pattern-semver include
          "$$include": { "target": "pattern-semver", "data": { "name": "coreVersion" } }
        }
      }
    },
    "includes": {
      "uniqueItems": true
    },
    "manifestPlusVersion": {
      "$$include": { "target": "pattern-semver", "data": { "name": "manifestPlusVersion" } }
    },
    "media": {
      "items": {
        "$ref": "#/definitions/media-item-strict"
      }
    },
    "media-item-strict": {
      "then": {
        "properties": {
          "thumbnail": {
            // image pattern include here
            "$$include": { "target": "pattern-url-image", "data": { "name": "url" } }
          },
          "url": {
            // video pattern include here
            "$$include": { "target": "pattern-url", "data": { "name": "url" } }
          }
        }
      },
      "else": {
        "then": {
          "properties": {
            "url": {
              // image pattern include here
              "$$include": { "target": "pattern-url-image", "data": { "name": "url" } }
            }
          }
        }
      }
    }
  }
}

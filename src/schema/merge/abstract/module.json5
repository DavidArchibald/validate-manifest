{
  "$id": "shared/definitions/abstract/module.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "manifest": {
      "examples": [
        "https://someaddress.com/module.json"
      ],
      "title": "A string value",
      "type": "string"
    },
    "system": {
      "examples": [
        "dnd5e"
      ],
      "oneOf": [
        {
          "title": "A string value",
          "type": "string"
        },
        {
          "items": {
            "title": "A string value",
            "type": "string"
          },
          "title": "An array of items",
          "type": "array"
        }
      ],
      "errorMessage": "'system' should be a string or array of strings"
    },
    "packs": {
      "title": "An array of items",
      "items": {
        "required": [
          "module"
        ],
        "properties": {
          "module": {
            "title": "A string value",
            "default": "",
            "examples": [
              "module-name"
            ],
            "type": "string"
          },
          "system": {
            "examples": [
              "dnd5e"
            ],
            "oneOf": [
              {
                "title": "A string value",
                "type": "string"
              },
              {
                "items": {
                  "title": "A string value",
                  "type": "string"
                },
                "title": "An array of items",
                "type": "array"
              }
            ],
            "errorMessage": "'system' should be a string or array of strings"
          }
        }
      }
    }
  }
}
